@model WebAppMultiUserMVC.Models.Login

@{
    ViewBag.Title = "Login_Pageload";
}

<h2>User Details</h2>

<div>
    @using (Html.BeginForm("Login_Click", "Login", FormMethod.Post, new { enctype = "multipart/form" }))

    {
        <div>
            <label>Userame:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.Uname)
            @Html.ValidationMessageFor(m => m.Uname)
        </div>
        <div>
            <label>Password:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.Password)
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div>
            <input type="submit" value="Login">
            @Html.DisplayFor(m =>m.msg)
        </div>
    }
</div>